@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Projekt01.Models.Movies.Movie
@{
ViewData["Title"] = "Create New Movie";
Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-primary">Create New Movie</h1>

<h4 class="text-secondary">Movie Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="border p-4 rounded shadow bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CompanyId" class="form-label"></label>
                <select asp-for="CompanyId" class="form-control">
                    <option value="">-- Select a Company --</option>
                    @foreach (var company in ViewBag.Companies as List<SelectListItem>)
                    {
                        <option value="@company.Value">@company.Text</option>
                    }
                </select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
